@model DataSense_UI.Models.ViewModels.AuthenticateViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section documentHeadAdditions {
    <style type="text/css">
        .error {
            color: red;
        }
    </style>
}
@using (Html.BeginForm("ChangePassword", "Authenticate", FormMethod.Post, new { @class = "container-fluid h-100 first_screen", role = "form" }))
{
    <div class="row">
        @Html.Partial("~/Views/Shared/LeftMenupanel.cshtml")
        <div class="col-lg-10 rt_main">
            <div class="heading_top">
                <ul class="pagination_ul">
                    <li> Change Password </li>
                </ul>
            </div>
            <div class="twitter_data_hd">
                <h2 class="heading_in"> Change Password </h2>
            </div>
            <div class="edit_form">
                <div class="form-group">
                    <div class="form_h4 error">
                        @if (Model != null)
                        {
                            if (Model.ErrorMessage != null)
                            {
                                @Model.ErrorMessage
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label class="name_lbl"> Current Password </label>
                    @Html.PasswordFor(m => m.objchangePassword.currentPassword, new { @class = "form-control", maxlength = "100", required = "required", autocapitalize = "none", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.objchangePassword.currentPassword, "", new { @class = "error" })
                </div>
                <div class="form-group">
                    <label class="name_lbl"> New Password </label>
                    @Html.PasswordFor(m => m.objchangePassword.newPassWord, new { @class = "form-control", maxlength = "100", required = "required", autocomplete = "new-password", autocapitalize = "none" })
                    @Html.ValidationMessageFor(m => m.objchangePassword.newPassWord, "", new { @class = "error" })
                </div>
                <div class="form-group">
                    <label class="name_lbl"> Confirm New Password </label>
                    @Html.PasswordFor(m => m.objchangePassword.confirmNewPassWord, new { @class = "form-control", maxlength = "100", required = "required", autocomplete = "new-password", autocapitalize = "none" })
                    @Html.ValidationMessageFor(m => m.objchangePassword.confirmNewPassWord, "", new { @class = "error" })
                </div>
                <div class="btns">
                    <button type="submit" class="save_btn">Save</button>
                    <button type="button" class="cancel_btn" onclick="location.href = '/Authenticate/ChangePassword';">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
