@model DataSense_UI.Models.ViewModels.DataSetViewModel

@using (Html.BeginForm("Patch", "DataSet", FormMethod.Post, new { @class = "container-fluid h-100 main_app", role = "form" }))
{
    <div class="row">
        @Html.Partial("~/Views/Shared/LeftMenupanel.cshtml")
        <div class="col-lg-10 rt_main">
            <div class="heading_top">
                <ul class="pagination_ul">
                    <li> <a href="/DataSet" title="Data Sets">Data Sets</a> / </li>
                    <li> Edit data set / </li>
                    <li>@Model.dataSetPatch.dataSetName</li>
                </ul>
            </div>
            <div class="twitter_data_hd">
                <h2 class="heading_in"> Data Sets </h2>
            </div>
            <div class="edit_form">
                <div class="form-group">
                    <label class="name_lbl"> Data Set Name </label>
                    @Html.TextBoxFor(m => m.dataSetPatch.dataSetName, new { @class = "form-control", maxlength = "50", required = "required", autocapitalize = "none" })
                    @Html.ValidationMessageFor(m => m.dataSetPatchView.dataSetName)
                    @Html.HiddenFor(m => m.dataSetPatch.datasetId)
                </div>
                <div class="form-group">
                    <label class="name_lbl"> Data Set Look Up table </label>
                    @Html.TextBoxFor(m => m.dataSetPatch.dataSetLookUpTable, new { @class = "form-control", maxlength = "100", required = "required", autocapitalize = "none" })
                    @Html.ValidationMessageFor(m => m.dataSetPatchView.dataSetLookUpTable)

                </div>

                <div class="form-group">
                    <label class="name_lbl"> Active </label><br />
                    @Html.CheckBoxFor(m => m.dataSetPatch.active, new { })
                </div>

                <div class="form-group">
                    <label class="name_lbl"> Last Modified on </label>
                    <br />
                    @Model.dataSetPatchView.modifiedOn

                    <div class="abslut_icon">
                        <div class="username_rt date_abst">  </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="name_lbl"> Last Modified by </label>
                    <br />
                    @Model.dataSetPatchView.modifiedByUser

                    <div class="abslut_icon">
                        <div class="username_rt">  </div>
                    </div>
                </div>
                <div class="btns">
                    <button type="submit" class="save_btn">Save</button>
                    <button type="button" class="cancel_btn" onclick="location.href = '/DataSet/Index';">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}